<Alloy>
	<Collection src="favoriteMod" />
	<TabGroup id="tabGroup" class="StartProperties">
		<Tab id="allFavoritesTab" class="StartProperties">
			<Window>
				<ListView id="listView" defaultItemTemplate="template" onItemclick="itemClick">
					<Templates>
						<ItemTemplate name="template" id="template">/>
							<Label bindId="name" id="name" />
						</ItemTemplate>
					</Templates>
					<ListSection dataCollection="Alloy.Collections.allFavoritesCol">
						<ListItem id="listItem" itemId="{id}" name:text="{name}"/>
					</ListSection>
				</ListView>
			</Window>
		</Tab>
	</TabGroup>
</Alloy>
